<?xml version='1.0' encoding='utf-8'?>
<widget id="com.alertasciudadanas.mx" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AlertasCiudadanas</name>
    <description>
        Los eventos en el momento que estan sucediendo
    </description>
    <author email="alertasciudadanas@gmail.com" href="https://www.facebook.com/villbercreativo">
        Alertas Ciudadanas
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/icon/android/ldpi.png" platform="android" qualifier="ldpi" />
        <icon src="res/icon/android/mdpi.png" platform="android" qualifier="mdpi" />
        <icon src="res/icon/android/hdpi.png" platform="android" qualifier="hdpi" />
        <icon src="res/icon/android/xhdpi.png" platform="android" qualifier="xhdpi" />
        <icon src="res/icon/android/xxhdpi.png" platform="android" qualifier="xxhdpi" />
        <icon src="res/icon/android/xxxhdpi.png" platform="android" qualifier="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~7.0.0" />
    <plugin name="cordova-plugin-googlemaps" spec="^2.3.3">
        <variable name="API_KEY_FOR_ANDROID" value="AIzaSyDL3zukFrxlSjlxq9tle2PS_MlanvtFtY4" />
        <variable name="PLAY_SERVICES_VERSION" value="15.0.1" />
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="26.1.0" />
    </plugin>
</widget>
